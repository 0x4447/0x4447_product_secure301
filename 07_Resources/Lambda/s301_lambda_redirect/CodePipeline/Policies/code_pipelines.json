{
	"CodePipelineRedirectPolicyS3Artifact": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"Roles": [ { "Ref": "CodePipelineRedirectRole" } ],
			"PolicyName": "s3_artifact_put",
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Sid": "S3Artifact",
						"Effect": "Allow",
						"Action": "s3:PutObject",
						"Resource": { "Fn::Sub": "arn:aws:s3:::${CodePipelineArtifactsParam}/*"}
					}
				]
			}
		}
	}
}
