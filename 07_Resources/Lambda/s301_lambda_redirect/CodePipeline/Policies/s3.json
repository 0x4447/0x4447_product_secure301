{
	"CodePipelineRedirectPolicyS3": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"PolicyName": "s3",
			"Roles": [ { "Ref": "CodePipelineRedirectRole" } ],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "s3:*",
						"Resource": { "Fn::Sub": "arn:aws:s3:::${CodePipelineArtifactsParam}/*"}
					}
				]
			}
		}
	}
}
